// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auto increment is a temporary solution
model User {
  userId    String @unique
  discordId BigInt
  token     Token @relation(fields: [userId], references: [ownedBy])
  @@id([userId, discordId])
}

model Token {
  id           Int    @id @default(autoincrement())
  accessToken  String
  refreshToken String
  user         User?
  ownedBy      String @unique
}
